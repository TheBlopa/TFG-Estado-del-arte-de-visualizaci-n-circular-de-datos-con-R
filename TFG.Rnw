data <- data %>% filter(Continente!="") %>% droplevels()
data$pathString <- paste("Mundo", data$Continente, data$Region, data$Pais, sep = "/")
library(data.tree)
poblacion <- as.Node(data)
@
<<datos_cicle, echo=1:6, eval=FALSE>>=
